doctype 5
html.full
  head
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(http-equiv="PRAGMA" content="NO-CACHE")
    title Build Monitor
    link(rel="shortcut icon" href="images/Icon.ico")
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.css')
    link(href="/stylesheets/bootstrap/bootstrap-glyhicons.css" rel="stylesheet")
    script(src='js/lib/jquery/jquery.min.js').
    script(src='js/lib/jquery/jquery_colour.min.js').
    script(src='js/lib/bootstrap/bootstrap.js').
    script(src='js/lib/momentjs/moment.min.js').
    script(src='js/lib/angular/angular.js').
    script(src='js/lib/angular-momentjs/angular-momentjs.min.js').
    script(src='js/lib/angular/angular-route.js').
    script(src='js/app.js').
    script(src='js/controllers/controller.js').
    script(src='js/services/service.js').
    style.
      .navbar-brand{
        padding-bottom:2px;
      }
      .icon{
        margin-left: 10px;
        margin-right: 10px;
      }
      body{
        font-family: Arial, sans-serif !important;
        line-height: 1.42857143;
        color: #ffffff;
        background-color: #108a93;
      }
      h1{
        font-size: 40px;
      }
      .well{
        margin-left: 3px;
        margin-right: 3px;
      }
      .no-margin{
        margin-top: 1px;
        margin-bottom: 1px;
      }
      .avg{
        text-align: center;
      }
      .avg{
        text-align: center;
      }
      .body{
        font-size: 36px;
      }
      .normal-font{
        font-family: Arial, sans-serif !important;
      }
      .red{
        border-color: #ad1d28;
      }
      .error-content{
        position: fixed;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        border: 1px solid black!important;
        padding: 10px;
      }
      .bottom{
        bottom: 0;
      }
      .top{
        top: 0;
      }
      .center{
        text-align: center;
      }
      .error{
        margin:3px;
        border: 1px solid #b94a48;
        background-color: #E0ADAD!important;
        color: black;
      }
      .col-centered {
          display:inline-block;
          float:none;
          text-align:left;
      }
  body(ng-app='nodeApp' ng-controller="controller").body
    .container(style="width: 100%;")
      h1 Averages
      .row
        div.col-sm-4
          .well
            .avg
              h1.no-margin.normal-font Today
              hr
              div {{Display.Today.Average}}
              div {{Display.Today.Queue}}
              div
                span.glyphicon.glyphicon-ok.icon 
                {{Display.Today.Success}}
                span.glyphicon.glyphicon-remove.icon 
                {{Display.Today.Fail}}
        div.col-sm-4
          .well 
            .avg
              h1.no-margin.normal-font Yesterday
              hr
              div {{Display.Yesterday.Average}}
              div {{Display.Yesterday.Queue}}
              div
                span.glyphicon.glyphicon-ok.icon 
                {{Display.Yesterday.Success}}
                span.glyphicon.glyphicon-remove.icon 
                {{Display.Yesterday.Fail}}
        div.col-sm-4
          .well
            .avg
              h1.no-margin.normal-font Last Week
              hr
              div {{Display.Week.Average}}
              div {{Display.Week.Queue}}
              div 
                span.glyphicon.glyphicon-ok.icon
                {{Display.Week.Success}}
                span.glyphicon.glyphicon-remove.icon
                {{Display.Week.Fail}}
      hr.red
      h1 Agents
      .row
        span.col-sm-4(ng-repeat="agent in Display.Agents")
          .well.avg-small(ng-class="{error: agent.error}")
            {{agent.name}}
            span.glyphicon.glyphicon-ok.icon(ng-show="agent.enabled")
            span.glyphicon.glyphicon-remove.icon(ng-show="!agent.enabled")
            span.glyphicon.glyphicon-ban-circle.icon(ng-show="!agent.authorized")
            span.glyphicon.glyphicon-cloud-upload.icon(ng-show="!agent.connected")
            span.glyphicon.glyphicon-refresh.icon(ng-show="!agent.uptodate")
        div(ng-show="Display.Agents.length == 0")
          .well.col-md-12.avg There are no agents available to display
        .error-content.bottom.center.warning1(ng-show="Display.ShowWarning")
          span Build Agent Warning
        .error-content.top.center.warning2(ng-show="Display.ShowWarning")
          span Build Agent Warning          